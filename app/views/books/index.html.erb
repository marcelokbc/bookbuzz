<div class="container mx-auto py-8">
  <h1 class="text-3xl font-bold mb-4"> Todos os livros </h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% @books.each do |book| %>
      <div class="bg-white rounded-lg shadow-md">
        <% if book.cover.attached? %>
          <%= image_tag book.cover.variant(resize_to_fit: [300, 400]) %>
        <% else %>
          <div class="h-40 bg-gray-200"></div>
        <% end %>
      
        <div class="p-4">
          <h2 class="text-lg font-semibold mb-2"><%= book.title %></h2>
          <p class="text-gray-600 mb-2"><%= book.author %>
          <p class="text-gray-700 mb-4"><%= truncate(book.description, length: 100) %></p>

          <%= link_to "Detalhes", book_path(book), class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
        </div>
      </div>
    <% end %>
  </div>
</div>